{
  "$id": "SecurityValues",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-z][_\\-a-z]*$": {
      "type": "object",
      "oneOf": [
        {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "additionalProperties": false
        },
        {
          "token": {
            "type": "string"
          },
          "additionalProperties": false
        },
        {
          "apikey": {
            "type": "string"
          },
          "additionalProperties": false
        }
      ]
    }
  }
}